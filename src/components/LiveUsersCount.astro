<div id="live-users-count-container" class="items-center gap-1 hidden dark:bg-gray-700 bg-gray-200 outline-blue-500 outline-2 outline cursor-grab rounded-md px-2" title="Currently active users">
	<svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-eye"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0" /><path d="M21 12c-2.4 4 -5.4 6 -9 6c-3.6 0 -6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6c3.6 0 6.6 2 9 6" /></svg>
	<span class="font-medium text-md">
	1
	</span>
</div>

<script>
	(() => {
		const container = document.getElementById('live-users-count-container');
		if (!container) {
			return
		}
		const countDisplay = container.querySelector("span")
		if (!countDisplay) {
			return
		}
		const eventSource = new EventSource("https://rando.sahithyan.dev/live-users-count?d=s1.sahithyan.dev", {
		});
		eventSource.addEventListener("message", function (event) {
			countDisplay.innerHTML = event.data;
			console.log("event", event.data);
		})
		eventSource.addEventListener("open", function () {
			container.classList.remove("hidden");
			container.classList.add("flex");
		})
		eventSource.addEventListener("error",function () {
			container.classList.remove("flex");
			container.classList.add("hidden");
		})

	})()
</script>