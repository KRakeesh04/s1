---
import DefaultPageSidebar from "@astrojs/starlight/components/Sidebar.astro";
---

<DefaultPageSidebar {...Astro.props}> <slot /> </DefaultPageSidebar>

<script>
	const activeEl = document.querySelector("#starlight__sidebar a[aria-current]");
	if (activeEl instanceof HTMLElement) {
		activeEl.scrollIntoView({
			behavior: "instant",
			block: "center"
		})
	}
</script>
